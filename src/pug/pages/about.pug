									img(src='./img/sertificate.webp', srcset='./img/sertificate@2x.webp 2x' width='320' height='446' loading='lazy' alt='img')
						
						//SWIPER NAV
						.swiper__nav
							.docs-swiper-prev.swiper-button-prev
								svg.svg-arrLeft
									use(href='../img/sprite.svg#svg-arrLeft')
