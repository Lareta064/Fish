			//DOCS
			section.docs
				.container
					h2.h2 Документы
					.docs-swiper.swiper
						.swiper-wrapper
							.swiper-slide
								.docs-item
									img(src='./img/sertificate.webp', srcset='./img/sertificate@2x.webp 2x' width='320' height='446' loading='lazy' alt='img')
							
							.swiper-slide
								.docs-item
