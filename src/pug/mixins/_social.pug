
mixin social
	.social-block
		.social-block__title.fw-700 Социальные сети
		.social
			a(href="#!").social-link
				img(src='./img/social/tg.webp', srcset='./img/social/tg@2x.webp 2x' width='40' height='34'  alt='img')
			a(href="#!").social-link
				img(src='./img/social/vk.webp', srcset='./img/social/vk@2x.webp 2x' width='42' height='27'  alt='img')
			
			a(href="#!").social-link
				img(src='./img/social/pin.webp', srcset='./img/social/pin@2x.webp 2x' width='25' height='28'  alt='img')

